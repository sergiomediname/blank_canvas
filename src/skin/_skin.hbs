  {{!-- Skin (for Customization Mode) --}}
  <b:skin>
    <![CDATA[
    /*!
      * Name      : {{name}}
      * Version   : {{version}}
      * License   : {{license}}
      *//*!

    Card
    =====================
    {{> Card}}

    Layout
    =====================
    {{> Layout}}

    Settings
    =====================
    {{> Settings}}

    Customization
    =====================
    {{variable 'keycolor' description='Main Color' type='color' value='#6514d6'}}
    {{> Font}}
    {{> Widths}}

    All styles
    =====================*/

    {{asset 'css/main.min.css'}}
    /*
    Your custom styles
    =====================*/
  ]]>
